<% if @stock %>
  <div>
    <strong>Symbol:</strong> <%= @stock.ticker %>
     <strong>Company:</strong> <%= @stock.name %>
    <strong>Price:</strong> <%= number_to_currency(@stock.last_price) %>
    <% if current_user.can_track?(@stock.ticker) %>
      <%= link_to 'Add to portfolio', user_stocks_path( user: current_user, ticker: @stock.ticker ), 
                                      method: :post, class: "btn btn-xs  btn-success" %>
    <% else %>
      <p>You're already tracking this stock.</p>
    <% end %>
  </div>
<% end %>