<% if !@tracked_stocks.empty? %>
  <table class="table table-hover mt-2">
    <thead class="bg-dark text-white">
      <tr>
        <th scope="col">Ticker</th>
        <th scope="col">Company Name</th>
        <th scope="col">Price</th>
         <% if current_user.status? && current_user.role_id === 2 %>
        <th scope="col" class="text-center"" >Action</th>
         <% end %>
      </tr>
    </thead>
    
    <tbody>
    <% @tracked_stocks.each do |stock| %>
        <tr>
          <th scope="row"><%= stock.ticker %></th>
          <td><%= stock.name %></td>
          <td><%= stock.last_price %></td>
          <% if current_user.status? && current_user.role_id === 2 %>
            <td class="text-center"><%= link_to 'Trade', new_trade_path(user_stock_id: UserStock.where(user_id: current_user.id, stock_id: stock.id).first, ticker: stock.ticker),
                                    class: 'btn btn-xs btn-warning' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
